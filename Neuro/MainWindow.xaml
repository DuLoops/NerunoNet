<Window x:Class="Neuro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="280" Margin="44,0,0,0" VerticalAlignment="Center" Width="280">
            <Canvas Name="paintSurface" Width="280" Height="280" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1">
                <Canvas.Background>
                    <SolidColorBrush Color="White" Opacity="0"/>
                </Canvas.Background>
            </Canvas>
        </Border>
        <Button Content="Predict" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="output" HorizontalAlignment="Center" Margin="0,253,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image Name="exImage" HorizontalAlignment="Left"  Margin="577,176,0,0" VerticalAlignment="Top" />

    </Grid>
</Window>
